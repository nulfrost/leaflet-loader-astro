{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["es2022"],
		"target": "es2022",
		"allowJs": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"module": "nodenext",
		"baseUrl": "lib",
		"outDir": "dist",
		"moduleResolution": "nodenext",
		"rootDir": "lib",
		"sourceMap": true,
		"noEmit": true,
		"declaration": true
	},
	"include": ["lib"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
